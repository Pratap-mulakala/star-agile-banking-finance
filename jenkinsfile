pipeline {
    agent any
stages {
        stage('Build') {
            steps {
                // Get some code from a GitHub repository
                git 'https://github.com/Pratap-mulakala/star-agile-banking-finance.git'

                // Run Maven on a Unix agent.
                sh "mvn -Dmaven.test.failure.ignore=true clean package"

            }        
        }
        stage('Create Docker Image') {
           steps {
               sh 'docker build -t pratap1371/financeme:1.0 .'
                    }
                }
         stage('Docker-Login') {
           steps {
              withCredentials([usernamePassword(credentialsId: 'dockercreds', passwordVariable: 'dockerpassword', usernameVariable: 'dockerlogin')]) {
               sh 'docker login -u ${dockerlogin} -p ${dockerpassword}'
                                   }
                        }
                }
       stage('Push-Image') {
           steps {
               sh 'docker push pratap1371/financeme:1.0'
                     }
                }
   }
    }
